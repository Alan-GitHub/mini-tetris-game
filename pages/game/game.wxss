.game-container.retro {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
  background: #f4d03f;
  padding: 20rpx;
  box-sizing: border-box;
}

/* Game Title */
.game-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

/* Screen Frame */
.screen-frame {
  background: #2c2c2c;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.3);
}

.screen-inner {
  display: flex;
  background: #8fbc8f;
  border-radius: 8rpx;
  padding: 20rpx;
  border: 4rpx solid #555;
}

/* Game Board */
.game-board {
  background: #9bb89b;
  border: 2rpx solid #666;
  border-radius: 4rpx;
}

.game-canvas {
  width: 300rpx;
  height: 600rpx;
  display: block;
  background: #0a0a0a;
}

/* Info Panel */
.info-panel {
  width: 180rpx;
  padding-left: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.info-section {
  background: rgba(255, 255, 255, 0.3);
  border-radius: 12rpx;
  padding: 16rpx;
}

.info-label {
  font-size: 24rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.info-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.next-section {
  flex: 1;
}

.next-preview {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 120rpx;
}

.preview-row {
  display: flex;
}

.preview-cell {
  width: 30rpx;
  height: 30rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
}

.preview-cell.active {
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.sound-toggle {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 12rpx;
}

.sound-icon {
  font-size: 40rpx;
}

/* Controls Area */
.controls-area {
  width: 100%;
  margin-top: 30rpx;
  padding: 0 20rpx;
}

/* Function Buttons */
.function-buttons {
  display: flex;
  justify-content: center;
  gap: 60rpx;
  margin-bottom: 50rpx;
}

.func-btn-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.func-btn {
  width: 80rpx;
  height: 80rpx;
  min-width: 80rpx;
  min-height: 80rpx;
  max-width: 80rpx;
  max-height: 80rpx;
  border-radius: 50%;
  border: none;
  flex: none;
  flex-shrink: 0;
  flex-grow: 0;
  padding: 0;
  margin: 0;
}

.func-btn.pause {
  background: radial-gradient(circle at 30% 30%, #66BB6A, #4CAF50, #2E7D32);
  box-shadow: 
    0 6rpx 12rpx rgba(0, 0, 0, 0.3),
    inset 0 -4rpx 8rpx rgba(0, 0, 0, 0.2),
    inset 0 4rpx 8rpx rgba(255, 255, 255, 0.3);
}

.func-btn.sound {
  background: radial-gradient(circle at 30% 30%, #66BB6A, #4CAF50, #2E7D32);
  box-shadow: 
    0 6rpx 12rpx rgba(0, 0, 0, 0.3),
    inset 0 -4rpx 8rpx rgba(0, 0, 0, 0.2),
    inset 0 4rpx 8rpx rgba(255, 255, 255, 0.3);
}

.func-btn.restart {
  background: radial-gradient(circle at 30% 30%, #EF5350, #F44336, #C62828);
  box-shadow: 
    0 6rpx 12rpx rgba(0, 0, 0, 0.3),
    inset 0 -4rpx 8rpx rgba(0, 0, 0, 0.2),
    inset 0 4rpx 8rpx rgba(255, 255, 255, 0.3);
}

.func-btn::after {
  border: none;
}

.func-btn:active {
  transform: scale(0.92);
  box-shadow: 
    0 2rpx 4rpx rgba(0, 0, 0, 0.3),
    inset 0 -2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.func-label {
  font-size: 22rpx;
  color: #333;
}

/* Main Controls */
.main-controls {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 120rpx;
  padding: 0 20rpx;
}

/* Drop Area */
.drop-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.btn-label-top {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #fff;
  z-index: 10;
  pointer-events: none;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.5);
  font-size: 22rpx;
  font-weight: bold;
  text-align: center;
  line-height: 1.3;
  white-space: pre-line;
}

.big-btn {
  width: 160rpx;
  height: 160rpx;
  min-width: 160rpx;
  min-height: 160rpx;
  max-width: 160rpx;
  max-height: 160rpx;
  border-radius: 50%;
  border: none;
  background: radial-gradient(circle at 30% 30%, #7986CB, #5c6bc0, #3949AB);
  box-shadow: 
    0 8rpx 16rpx rgba(0, 0, 0, 0.3),
    inset 0 -6rpx 12rpx rgba(0, 0, 0, 0.2),
    inset 0 6rpx 12rpx rgba(255, 255, 255, 0.3);
  padding: 0;
  margin: 0;
  flex: none;
}

.big-btn::after {
  border: none;
}

.big-btn:active {
  transform: scale(0.92);
  box-shadow: 
    0 4rpx 8rpx rgba(0, 0, 0, 0.3),
    inset 0 -3rpx 6rpx rgba(0, 0, 0, 0.2);
}

/* Direction Area */
.direction-area {
  position: relative;
  width: 340rpx;
  height: 300rpx;
}

.dir-row {
  display: flex;
  justify-content: center;
  align-items: center;
}

.dir-row.top {
  flex-direction: column;
  position: relative;
  margin-bottom: 10rpx;
}

.dir-row.middle {
  justify-content: space-between;
  padding: 0 10rpx;
}

.dir-row.bottom {
  flex-direction: column;
  position: relative;
  margin-top: 10rpx;
}

.dir-btn-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.dir-btn {
  width: 100rpx;
  height: 100rpx;
  min-width: 100rpx;
  min-height: 100rpx;
  max-width: 100rpx;
  max-height: 100rpx;
  border-radius: 50%;
  border: none;
  background: radial-gradient(circle at 30% 30%, #7986CB, #5c6bc0, #3949AB);
  box-shadow: 
    0 6rpx 12rpx rgba(0, 0, 0, 0.3),
    inset 0 -4rpx 8rpx rgba(0, 0, 0, 0.2),
    inset 0 4rpx 8rpx rgba(255, 255, 255, 0.3);
  padding: 0;
  margin: 0;
  flex: none;
}

.dir-btn::after {
  border: none;
}

.dir-btn:active {
  transform: scale(0.92);
  box-shadow: 
    0 3rpx 6rpx rgba(0, 0, 0, 0.3),
    inset 0 -2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.dir-label-top {
  font-size: 20rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #fff;
  z-index: 10;
  pointer-events: none;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.5);
  font-weight: bold;
}

.dir-center {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.arrow-cross {
  position: relative;
  width: 60rpx;
  height: 60rpx;
}

.arrow {
  position: absolute;
  width: 0;
  height: 0;
  border-style: solid;
}

.arrow.up {
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  border-width: 0 10rpx 15rpx 10rpx;
  border-color: transparent transparent #333 transparent;
}

.arrow.down {
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  border-width: 15rpx 10rpx 0 10rpx;
  border-color: #333 transparent transparent transparent;
}

.arrow.right {
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  border-width: 10rpx 0 10rpx 15rpx;
  border-color: transparent transparent transparent #333;
}

.arrow.left {
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  border-width: 10rpx 15rpx 10rpx 0;
  border-color: transparent #333 transparent transparent;
}

/* Modal */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}

.modal-content {
  background: #f4d03f;
  border-radius: 20rpx;
  padding: 60rpx;
  min-width: 500rpx;
  text-align: center;
  border: 8rpx solid #2c2c2c;
}

.modal-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.modal-score {
  font-size: 40rpx;
  color: #c0392b;
  margin-bottom: 50rpx;
  font-weight: bold;
}

.modal-buttons {
  display: flex;
  justify-content: center;
  gap: 30rpx;
}

.modal-btn {
  padding: 20rpx 40rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
}

.modal-btn::after {
  border: none;
}

.restart-btn {
  background: #27ae60;
  color: white;
}

.back-btn {
  background: #7f8c8d;
  color: white;
}
